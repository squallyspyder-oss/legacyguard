# Example .env values for LegacyGuard

# Core
NODE_ENV=production
NEXTAUTH_SECRET=replace-me

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_CHEAP_MODEL=gpt-4o-mini
OPENAI_DEEP_MODEL=gpt-4o

# Postgres / pgvector
# Prefer Neon or Supabase if you need the pgvector extension
PGVECTOR_URL=postgres://user:pass@host:5432/legacyguard
AUDIT_DB_URL=
AUDIT_SIGNING_KEY=legacyguard-dev-key

# Redis
REDIS_URL=redis://:password@redis-host:6379
REDIS_TLS_URL=

# NextAuth / OAuth
GITHUB_ID=
GITHUB_SECRET=
NEXTAUTH_URL=https://your-app.onrender.com

# Sandbox (optional)
LEGACYGUARD_SANDBOX_ENABLED=false
LEGACYGUARD_SANDBOX_REPO_PATH=/workspace/legacyguard
LEGACYGUARD_SANDBOX_COMMAND=npm test
LEGACYGUARD_SANDBOX_RUNNER=/workspace/legacyguard/scripts/runner_sandbox.sh
LEGACYGUARD_SANDBOX_TIMEOUT_MS=900000

# Quotas and limits
QUOTA_CIRCUIT_THRESHOLD_USD=1000
QUOTA_CIRCUIT_PAUSE_MS=600000

# Notes: Do NOT commit real secrets. Use Render envs or CI secrets.

